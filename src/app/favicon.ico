<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 32 32" width="32" height="32">
  <defs>
    <!-- Animated gradient definitions -->
    <linearGradient id="favicon-gradient-1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1"/>
      <stop offset="50%" style="stop-color:#EC4899;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#06B6D4;stop-opacity:1"/>
    </linearGradient>
    
    <!-- Glow filter -->
    <filter id="favicon-glow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="1" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Main hexagon shape -->
  <polygon points="16,4 28,10 28,22 16,28 4,22 4,10" 
           fill="url(#favicon-gradient-1)" 
           filter="url(#favicon-glow)"/>
  
  <!-- Letter N overlay -->
  <text x="16" y="22" 
        font-family="Arial, sans-serif" 
        font-size="14" 
        font-weight="bold" 
        text-anchor="middle" 
        fill="white">
    N
  </text>
</svg>